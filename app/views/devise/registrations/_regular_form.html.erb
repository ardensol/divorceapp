 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <h3 class="quote_label">Email</h3>
        <%= f.email_field :email, autofocus: true, class: "quote_input" %>
      </div>

      <div class="field">
        <h3 class="quote_label">Password</h3>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "quote_input" %>
      </div>

      <div class="field">
        <h3 class="quote_label">Password Confirmation</h3<br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "quote_input" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "create-account-button" %>
      </div>
    <% end %>
  </div>