
<div class="loginwrap">
  <div class="login-head">
    <h2>Log In</h2>
  </div>
    <div class="signup-form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <h3 class="quote_label">Email</h3>
          <%= f.email_field :email, autofocus: true, class: "quote_input" %>
        </div>

        <div class="field">
          <h3 class="quote_label">Password</h3><br />
          <%= f.password_field :password, autocomplete: "off", class: "quote_input" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class: "create-account-button" %>
        </div>
      <% end %>
    </div>
      <div class="login-footer" style="margin-bottom: 10px;">
        <div class="right">
          <%= render "devise/shared/links" %>
        </div></br>
      </div>
    </div>
</div>
