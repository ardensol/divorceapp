<div class="quote-header-show">
	<div class="container-fluid pad-top-bot">
		<div class="clearfix left">
			<a class="pic-padding left" style="width: 60px;">
				<img src="https://assembly.firesize.com/120x120/g_center/https://d1015h9unskp4y.cloudfront.net/attachments/bda9dba4-57d1-417e-a592-6fe5efbdd9d6/InstajobsLogo-01.jpg" width="60" height="60">
			</a>
			<div class="overflow-hidden">
				<h2 class="marg-bot-top-0">Lawyer Dashboard</h2>
				<h4 class="marg-bot-top-0"><%= current_user.email %> </h4>
			</div>

		</div>
	</div>
	<div class="border-top">
		<div class="tab-container">
			<ul class= "new-nav--tabs">
				<li class="new-tab">Quotes Available</li>
				<li class="new-tab-unselect"><%= link_to "Bids Placed", bids_path %></li>
			</ul>
		</div>
	</div>
</div>
<div class="container-fluid grey-quote-block">
	<div class="col-sm col-sm-8 px3">
		<div class="col-xs-12">
			<% @quotes.each do |q| %>
				<div class="bg-white bid-shadow">
					<div class="bid-header">
						<h4><%= link_to q.name, new_quote_bid_path(q.id) %></h4>
						<h4>Location: <%= q.location %></h4>
					</div>
					<div class="border-top bid-header">
						<p><%= q.description %></p>
					</div>
					<div class="border-top bid-header">
						<div class="left" style="padding-right: 10px">
							<img class="bg-gray-6" src="https://gravatar.com/avatar/d377714ee6c1f97fa2c17ac9fa8825a9?d=https%3A%2F%2Fassembly.com%2Fassets%2Fdefault_avatar.png&amp;s=288" width="24" height="24" style="max-width:24px;max-height:24px;">
						</div>
						<div style="padding-bottom: 10px; padding-left: 5px;">
							Created this Quote on <%= q.created_at.strftime("%b %d") %>
						</div>

					</div>
				</div>
			<% end %>
		</div>
	</div>
	<div class="col-sm col-sm-4 px3">
		
	</div>
</div>